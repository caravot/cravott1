<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- the definitions for the servlets -->
    <servlet>
        <servlet-name>addRegistrant</servlet-name>
        <servlet-class>com.seminar.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>testDB</servlet-name>
        <servlet-class>com.database.DatabaseTest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>com.user.services.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getUsers</servlet-name>
        <servlet-class>com.user.services.GetUsers</servlet-class>
    </servlet>

    <!-- the mapping for the servlets -->
    <servlet-mapping>
        <servlet-name>addRegistrant</servlet-name>
        <url-pattern>/addSeminarRegister</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>testDB</servlet-name>
        <url-pattern>/testDB</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getUsers</servlet-name>
        <url-pattern>/getUsers</url-pattern>
    </servlet-mapping>
</web-app>